<Window x:Class="LernMomentCrawler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LernMomentCrawler"
        mc:Ignorable="d"
        Title="LernMoment Crawler" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="timerView" FontSize="20" Margin="5" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center"/>
        <Button x:Name="loadWebSiteButton" Margin="5" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Content="Lade LernMomen.de" Click="LoadWebSiteButton_Click"/>
        <TextBlock x:Name="resultHtmlView" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2"/>
    </Grid>

</Window>
